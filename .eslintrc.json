{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "standard-with-typescript",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "prettier",
        "@typescript-eslint",
        "simple-import-sort"
    ],
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "printWidth": 90,
                "tabWidth": 2,
                "singleQuote": true,
                "trailingComma": "all",
                "arrowParens": "always",
                "semi": false
            }
        ],
        "@typescript-eslint/explicit-function-return-type": "off",
        "no-useless-constructor": "off",
        "simple-import-sort/imports": "error",
        "simple-import-sort/exports": "error"
    }
}